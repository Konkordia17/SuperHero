<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/superheroListFragment">

    <fragment
        android:id="@+id/superheroListFragment"
        android:name="com.example.superhero.SuperheroListFragment"
        android:label="SuperheroListFragment" >
        <action
            android:id="@+id/action_superheroListFragment_to_detailsFragment2"
            app:destination="@id/detailsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment2"
        android:name="com.example.superhero.DetailsFragment"
        android:label="DetailsFragment" >
        <argument
            android:name="hero"
            app:argType="com.example.superhero.Hero" />
    </fragment>
</navigation>